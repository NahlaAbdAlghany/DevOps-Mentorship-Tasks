apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: istio-ambient
  namespace: argocd
spec:
  goTemplate: true
  goTemplateOptions: ["missingkey=error"]
  generators:
  - list:
      elements:
      - cluster: in-cluster
        url: https://kubernetes.default.svc
        namespace: istio-system
        appName: istio-ambient
        path: istio/ambient/base

      - cluster: in-cluster
        url: https://kubernetes.default.svc
        namespace: istio-system
        appName: kiali
        path: istio/kiali

  template:
    metadata:
      name: "{{.appName}}"
    spec:
      project: default
      source:
        repoURL: 'https://github.com/NahlaAbdAlghany/DevOps-Mentorship-Tasks.git'
        targetRevision: main
        path: '{{.path}}'
      destination:
        server: '{{.url}}'
        namespace: '{{.namespace}}'
      syncPolicy:
        automated:
          selfHeal: true
          prune: true
        syncOptions:
        - CreateNamespace=true